---
interface Props {
    descriptionTitle: String;
    image1: String;
    image2: String;
    image3: String;
    image4: String;
    image5: String;
}

const { 
    descriptionTitle, 
    image1,
    image2,
    image3,
    image4,
    image5
} = Astro.props;
---

<div>
    <h1 class="mt-[5.875rem] mb-[.875rem] text-4xl flex items-center font-bold justify-center text-center text-[#224E35]" style="text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);">{descriptionTitle}</h1>
</div>

<section class="flex justify-center items-center">

    <div class="h-[50rem]">
        <div class="grid justify-center grid-cols-3 grid-rows-3 p-8 gap-[15px] h-full w-full">
            <div class="item1 rounded-tl-lg bg-center bg-no-repeat bg-cover w-350px" style=`background-image: url(${image1})`>
            </div>
    
            <div class="item2 bg-center bg-no-repeat bg-cover" style=`background-image: url(${image2})`>
            </div>
    
            <div class="item3 rounded-tr-lg bg-center bg-no-repeat bg-cover" style=`background-image: url(${image3})`>
            </div>
    
            <div class="item4 rounded-bl-lg bg-center bg-no-repeat bg-cover" style=`background-image: url(${image4})`>
            </div>
    
            <div class="item5 rounded-br-lg bg-center bg-no-repeat bg-cover" style=`background-image: url(${image5})`>
            </div>
        </div>
    </div>
</section>



<style>
.item1 {
    width: 20rem; 
    grid-column: 1;
    grid-row: 1 / 3;
}

.item2 {
    grid-column: 2;
}

.item3 {
    grid-column: 3;
}

.item4 {
    grid-column: 1;
    grid-row: 3;
}

.item5 {
    grid-column: 2 / 4;
    grid-row: 2 / 4;
}

</style>