---
interface Props {
	title1: string;
	title2: string;
	title3: string;
	title4: string;
    imageFrom1: string;
    imageFrom2: string;
    imageFrom3: string;
    imageFrom4: string;
    href1: String
    href2: String
    href3: String
    href4: String
    text1: String
    text2: String
    text3: String
    text4: String
}

const { title1, title2, title3, title4, imageFrom1, imageFrom2, imageFrom3, imageFrom4, href1, href2, href3, href4, text1, text2, text3, text4 } = Astro.props;
---

