<!--style={{ backgroundImage: `url(${imageFrom1})`}}-->
<div  class="sliders-box" class="overflow-hidden">
    <ul>
        <li style={{ backgroundImage: `url(${imageFrom1})`}} class="h-[37.5rem] bg-green-second">
            <div class="text">
                <a href=`${href1}`>{title1}</a>
                <p>{text1}</p>
            </div>

        </li>
        <li  style={{ backgroundImage: `url(${imageFrom2})`}} class="h-[37.5rem] bg-green-second">
            <div class="text">
                <a href=`${href2}`>{title2}</a>
                <p>{text2}</p>
            </div>

        </li>
        <li style={{ backgroundImage: `url(${imageFrom3})`}} class="h-[37.5rem] bg-green-second bg-top">
            <div class="text">
                <a href=`${href3}`>{title3}</a>
                <p>{text3}</p>
            </div>

        </li>
        <li style={{ backgroundImage: `url(${imageFrom4})`}} class="h-[37.5rem] bg-green-second bg-bottom">
            <div class="text">
                <a href=`${href4}`>{title4}</a>
                <p>{text4}</p>
            </div>

        </li>
    </ul>
</div> 


<style> 
.image{
    height: 37.5rem;
}

.sliders-box{
    overflow: hidden;
}

.sliders-box ul{
    display: flex;
    padding: 0;
    width: 400%;
    animation: slide 16s infinite alternate ease-in-out;
}

.sliders-box li{
    width: 100%;
    list-style: none;
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-repeat: no-repeat;
    background-size: cover;
    background-position:  center center;
    height: 29rem;
}

.text{
    position: absolute;
    text-align: center;
    font-size: 1.5rem;
    color: white;
    width: 90%;
}

.text p, a{
    text-shadow: 2px 2px 2px rgba(0, 0, 0, 0.5);
}

.text a{
    font-size: 4rem;
    font-weight: 800;
}

.sliders-box img{
    width: 100%;
}

@keyframes slide {
    0% { margin-left: 0;}
    20% { margin-left: 0;}
    
    25% { margin-left: -100%;}
    45% { margin-left: -100%;}
    
    50% { margin-left: -200%;}
    70% { margin-left: -200%;}
    
    75% { margin-left: -300%;}
    100% { margin-left: -300%;}
}

@media(max-width: 991px){
    .sliders-box{
        width: 100%;
    }
    .text h2{
        font-size: 5rem;
    }
    .text p{
        font-size: 1.5rem;
    }
}
</style>